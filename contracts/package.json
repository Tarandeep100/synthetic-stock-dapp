{
  "name": "contracts",
  "version": "1.0.0",
  "description": "Smart contracts for synthetic stock trading on X Layer",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy:local": "hardhat run scripts/deploy.ts --network localhost",
    "deploy:xlayer": "hardhat run scripts/deploy.ts --network xlayer",
    "deploy:xlayerTestnet": "hardhat run scripts/deploy.ts --network xlayerTestnet",
    "verify": "hardhat verify --network xlayer",
    "clean": "hardhat clean",
    "coverage": "hardhat coverage",
    "lint": "solhint 'contracts/**/*.sol'",
    "format": "prettier --write 'contracts/**/*.sol'"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@openzeppelin/contracts": "^5.0.0",
    "@openzeppelin/contracts-upgradeable": "^5.0.0",
    "hardhat": "^2.19.0",
    "hardhat-gas-reporter": "^1.0.9",
    "prettier": "^3.0.0",
    "prettier-plugin-solidity": "^1.1.3",
    "solhint": "^4.0.0",
    "solidity-coverage": "^0.8.5"
  },
  "keywords": [
    "solidity",
    "hardhat",
    "defi",
    "synthetic-assets",
    "x-layer"
  ],
  "author": "Synthetic Stock Warriors",
